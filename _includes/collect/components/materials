    {%- if _material.sublist %}
    <ul>
    {%- for _submaterial in _material.sublist %}
    <li>{% if _submaterial.url %}{% include components/link.html url=_submaterial.url text=_submaterial.text external=true %}{% else %}{{ _submaterial.text }}{% endif %}</li>
    {%- endfor %}
    </ul>
    {%- endif %}
    </li>
{%- endfor %}
</ul>
{%- endif %}
